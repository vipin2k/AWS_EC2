pipeline {
    agent any

    stages {
        stage('Connect to EC2 via SSH') {
            steps {
                script {
                    def remoteServer = [
                        name: 'dev',
                        host: '13.233.224.136',
                        port: 22,  // Default SSH port
                        credentialsId: '15.206.145.189'
                    ]

                    sshPublisher(
                        publishers: [
                            sshPublisherDesc(
                                configName: remoteServer.name,
                                transfers: [
                                    sshTransfer(
                                        execCommand: """
                                            ssh -o StrictHostKeyChecking=no -i "/home/ubuntu/jenkins-keypair.pem" -v ubuntu@13.233.224.136 'ls -l'
                                        """
                                    )
                                ],
                                usePromotionTimestamp: false,
                                useWorkspaceInPromotion: false,
                                verbose: true
                            )
                        ]
                    )
                }
            }
        }
    }
}
