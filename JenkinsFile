pipeline {
    agent any

    stages {
        stage('Connect to EC2 via SSH') {
            steps {
                script {
                    def remoteServer = [
                        name: 'ec2-13-233-224-136.ap-south-1.compute.amazonaws.com',
                        host: '13.233.224.136',
                        port: 22,  // Default SSH port
                        credentialsId: '15.206.145.189'
                    ]

                    sshPublisher(credentials: ['15.206.145.189']) {
                       bat """ 
                        sh ssh -o StrictHostKeyChecking=no -i "C:\\Users\\Vipinraj\\Downloads\\jenkins-keypair.pem" ubuntu${remoteServer.host}
                    """    
                    }
                }
            }
        }
    }
}