pipeline {
    agent any

    stages {
        stage('Connect to SSH Server') {
            steps {
                script {
                    def remoteServer = [
                        name: 'ec2-13-233-224-136.ap-south-1.compute.amazonaws.com',
                        host: '13.233.224.136',
                        port: 22,  // Default SSH port
                        credentialsId: '15.206.145.189'
                    ]

                    sshagent(['15.206.145.189']) {
                        sh "ssh ubuntu@15.206.145.189 'ls -l'"
                    }
                }
            }
        }
    }
}
